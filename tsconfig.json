{
  "compilerOptions": {
    // File Layout
    "module": "esnext", // Use "nodenext" para compatibilidade com ESM
    "target": "esnext", // Usando ESNext como alvo para sintaxe moderna
    "types": ["jest"],

    // Importar extensões TS
    "allowImportingTsExtensions": true,

    // Resolução de Módulos
    "moduleResolution": "node", // Para trabalhar com bundlers como ts-node
    "noEmit": true, // Impede a emissão de arquivos .js (se estiver usando ts-node)

    // Outras Configurações
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Estilo e Recomendações
    "strict": true,
    "jsx": "react-jsx", // Caso esteja usando React (mesmo não sendo o foco aqui)
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    "rootDir": "./",
    "outDir": "./dist",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
